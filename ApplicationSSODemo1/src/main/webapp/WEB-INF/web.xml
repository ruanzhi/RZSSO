<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         id="WebApp_ID" version="3.1">
    <display-name>ApplicationSSODemo1</display-name>
    <welcome-file-list>
        <welcome-file>index.htm</welcome-file>
    </welcome-file-list>

    <!--加载spring容器-->
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>classpath:spring/applicationContext.xml</param-value>
    </context-param>
    <context-param>
        <param-name>log4jConfigLocation</param-name>
        <param-value>classpath:log4j.properties</param-value>
    </context-param>

    <listener>
        <listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
    </listener>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <listener>
        <listener-class>com.rz.sso.session.LocalSessionListener</listener-class>
    </listener>

    <!-- 解决post乱码 -->
    <filter>
        <filter-name>CharacterEncodingFilter</filter-name>
        <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>utf-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>CharacterEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>SSOLoginFilter</filter-name>
        <filter-class>com.rz.sso.LoginFilter</filter-class>
        <init-param>
            <param-name>SSO_BASE_URL</param-name>
            <param-value>http://localhost/casServer</param-value>
        </init-param>
        <init-param>
            <param-name>APPLICATION_SERVER</param-name>
            <param-value>http://www.app1.rz.com:8081</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>SSOLoginFilter</filter-name>
        <url-pattern>/person/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>SSOLogoutFilter</filter-name>
        <filter-class>com.rz.sso.LogoutFilter</filter-class>
        <init-param>
            <param-name>SSO_BASE_URL</param-name>
            <param-value>http://localhost/casServer/</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>SSOLogoutFilter</filter-name>
        <url-pattern>/auth/logout</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>UpdateExpireTimeFilter</filter-name>
        <filter-class>com.rz.sso.UpdateExpireTimeFilter</filter-class>
        <init-param>
            <param-name>SSO_BASE_URL</param-name>
            <param-value>http://localhost/casServer</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>UpdateExpireTimeFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>



    <!-- springmvc的前端控制器 -->
    <servlet>
        <servlet-name>application1</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <!-- contextConfigLocation不是必须的， 如果不配置contextConfigLocation， springmvc的配置文件默认在：WEB-INF/servlet的name+"-servlet.xml" -->
        <init-param>
            <param-name>contextConfigLocation</param-name>
            <param-value>classpath:spring/springmvc.xml</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>application1</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
</web-app>
